# Environment
NODE_ENV=development

# Server
PORT=3000
API_BASE_URL=http://localhost:3000

# Database - MongoDB
MONGODB_URI=mongodb://admin:password@localhost:27017/ecommerce?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=ecommerce
MONGODB_USER=admin
MONGODB_PASSWORD=password

# Database - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=ecommerce
SEQUELIZE_DIALECT=mysql

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_12345
JWT_REFRESH_EXPIRATION=30d

# Stripe
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret_here

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-ecommerce-bucket

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@ecommerce.com

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Pagination
ITEMS_PER_PAGE=20

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt
